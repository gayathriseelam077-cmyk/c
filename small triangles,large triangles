#include <stdio.h>
#include <stdlib.h>
#include <math.h>

struct triangle
{
	int a;
	int b;
	int c;
};

typedef struct triangle triangle;
void sort_by_area(triangle* tr, int n) {
     double area[n];

    // Calculate areas using Heron's formula
    for (int i = 0; i < n; i++) {
        double a = tr[i].a;
        double b = tr[i].b;
        double c = tr[i].c;
        double s = (a + b + c) / 2.0;
        area[i] = sqrt(s * (s - a) * (s - b) * (s - c));
    }

    // Sort by area (ascending)
    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (area[i] > area[j]) {
                // swap areas
                double temp_area = area[i];
                area[i] = area[j];
                area[j] = temp_area;

                // swap triangles
                triangle temp = tr[i];
                tr[i] = tr[j];
                tr[j] = temp;
            }
        }
    }
}
int main()
{
	int n;
	scanf("%d", &n);
	triangle *tr = malloc(n * sizeof(triangle));
	for (int i = 0; i < n; i++) {
		scanf("%d%d%d", &tr[i].a, &tr[i].b, &tr[i].c);
	}
	sort_by_area(tr, n);
	for (int i = 0; i < n; i++) {
		printf("%d %d %d\n", tr[i].a, tr[i].b, tr[i].c);
	}
	return 0;
}
