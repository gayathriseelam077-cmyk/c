class Solution {
public:
    bool isValid(string s) {
        stack<char> st;
        unordered_map<char, char> match = {
            {')', '('},
            {'}', '{'},
            {']', '['}
        };

        for (char c : s) {
            // Opening bracket
            if (c == '(' || c == '{' || c == '[') {
                st.push(c);
            }
            // Closing bracket
            else {
                if (st.empty() || st.top() != match[c]) {
                    return false;
                }
                st.pop();
            }
        }

        return st.empty();
    }
};
